
<!DOCTYPE html>
<html lang='ko'>
    <head>
        <meta charset='UTF-8'>
        <title>내장객체 - Array</title>
    </head>
    <body>
        <script>
            var arr = ['a', 'b', 'c', 'd', 'e'];
            console.log(`arr : ${arr}`);
            console.log(`arr : ${arr.join(' ')}`);
            console.log(`arr : ${typeof arr}`);
            console.log(`arr : ${arr.length}`);

            var arr = new Array();
            console.log(`arr : ${typeof arr}`);
            console.log(`arr : ${arr.length}`);

            var arr = new Array('a', 'b', 'c', 'd', 'e');
            console.log(`arr : ${arr}`);
            console.log(`arr : ${typeof arr}`);
            console.log(`arr : ${arr.length}`);

            var arr = ['a', 'b', 'c', 'd', 'e'];

            //Callback Function
            // arr.forEach(function(value, index) {
            //     //console.log(`value : ${value}`);
            //     if(index % 2 == 0) {
            //         console.log(`value : ${value}`);
            //     }               

            // });

            //Arrow Function
            arr.forEach( (value, index) => {
                if(index % 2 == 0) {
                    console.log(`value : ${value}`);
                } 
            });


            var fruits = [ 'Apple', 'Banana', 'Kiwi', 'Strawberry', 'Graph' ];
            console.log(`fruits : ${fruits}`);

            //배열의 마지막 요소에 추가
            fruits.push('Blueberry');
            fruits.push('Peach');
            console.log(`fruits : ${fruits}`);

            //배열의 첫번쨰 요소에 추가
            fruits.unshift('Melon');
            console.log(`fruits : ${fruits}`);

            //배열의 마지막 요소에서 삭제
            fruits.pop('Blueberry');
            fruits.pop('Peach');
            console.log(`fruits : ${fruits}`);

            //배열의 첫번쨰 요소 삭제
            fruits.shift('Melon');
            console.log(`fruits : ${fruits}`);

            //Apple,Banana,Kiwi,Strawberry,Graph
            fruits.splice(1, 2);
            console.log(`${fruits}`);

            var fruits = [ 'Apple', 'Banana', 'Kiwi', 'Strawberry', 'Graph' ];

            fruits.splice(2, 1, 'Orange', 'Peach');
            console.log(`${fruits}`);

            //1,10,3,5,6,9
            var arr = [1, 5, 3, 10, 6, 9];
            console.log(`sorted arr : ${arr.sort()}`);

            var result = arr.sort( (num1, num2)  => {
                /*
                if (num1 > num2) {
                    return -1;
                } else if (num1 < num2) {
                    return 1;
                } else {
                    return 0;
                }
                */ 
                // 오름차순 정렬
                return num1 - num2;
                // 내림차순 정렬
                // return num2 - num1;
            });

            console.log(`result : ${result}`);   // 오름차순 정렬
            console.log(`result : ${result.reverse()}`);  // 내림차순 정렬


            var fruits = [ 'Apple', 'Banana', 'Kiwi', 'Strawberry', 'Graph' ];

            console.log(`${fruits.slice(1, 3)}`);

            var arr1 = [ 'Apple', 'Banana' ];
            var arr2 = [ 'Kiwi', 'Strawberry', 'Graph' ];

            var arr = arr1.concat(arr2);
            console.log(`${arr}`);
           

            var fruits = [ 'Apple', 'Banana', 'Kiwi', 'Strawberry', 'Apple', 'Graph' ];

            console.log(`${fruits.join('-')}`);

            console.log(`Applie : ${fruits.indexOf('Apple')}`);
            console.log(`Applie : ${fruits.lastIndexOf('Apple')}`);

            var person = {
                name: 'Julia',
                age: 20
            };

            console.log(`person : ${typeof person}`);
            console.log(`name : ${person.name},  age : ${person.age}`);

            var persons = [
                {firstName: "Julia", lastName: 'Roberts', age: 20},
                {firstName: "Brad", lastName: 'Pit', age: 10},
                {firstName: "Leonardo", lastName: 'Dicaprio', age: 30}
            ]

            persons.forEach( person => {
                console.log(`person : ${typeof person}`);
                console.log(`age : ${person.age}`);
            });


            

            var result = persons.map( person => {
                return {
                    fullName: `${person.firstName} ${person.lastName}`,
                    age: `${person.age}`
                }      
            } );

            /*
            var result = [
                { fullName: "Julia Roberts', age: 20 },
                { fullName: "Brad Pit', age: 20 },
                { fullName: "Leonardo Dicaprio', age: 20 },
            ]
            */

            result.forEach( person => {              
                console.log(`fullName : ${person.fullName}`);
                console.log(`age : ${person.age}`);
            } );


            var persons = [
                {firstName: "Julia", lastName: 'Roberts', age: 20},
                {firstName: "Brad", lastName: 'Pit', age: 20},
                {firstName: "Leonardo", lastName: 'Dicaprio', age: 30}
            ]

            var result = persons.filter( person => {
                if (person.age == 20) {
                    return true;
                }
            });
            /*
            var result = [
                {firstName: "Julia", lastName: 'Roberts', age: 20},
                {firstName: "Brad", lastName: 'Pit', age: 20}
            ]
            */
            console.log(`--------------------------------------------`);

            result.forEach( person => {                            
                console.log(`firstName : ${person.firstName}`);
                console.log(`lastName : ${person.lastName}`);
                console.log(`age : ${person.age}`);
            } );
            

            var intarr = [11, 12, 13, 14, 15];

            var result = intarr.reduce( (previousValue, currentValue, currentIndex) => {
                console.log(`previousValue : ${previousValue}`);
                console.log(`currentValue : ${currentValue}`);
                console.log(`currentIndex : ${currentIndex}`);
                return previousValue * currentValue;

            });

            /*
            previousValue currentValue
            (11) * 12
            (11 * 12) * 13
            (11 * 12 * 13) * 14
            (11 * 12 * 13 * 14) * 15
            */

            console.log(`result : ${result}`);
            



        </script>
    </body>
</html>